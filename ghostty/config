### Font
# freetype-load-flags = no-hinting
# freetype-load-flags = no-force-autohint

font-family = "JetBrainsMono NFM ExtraLight"
font-family-bold = "JetBrainsMono NFM Light"
font-family-italic = "JetBrainsMono NFM ExtraLight Italic"
font-family-bold-italic = "JetBrainsMono NFM Light Italic"

font-size = 15
font-thicken = false
window-inherit-font-size = true

