### Other
clipboard-read = allow
quick-terminal-position = center
shell-integration = zsh
shell-integration-features = no-cursor,no-sudo,title
macos-option-as-alt = true

### Key bindings
# Clear all keybindings before setting new ones
keybind = clear
# Some default keybindings
keybind = super+q=quit
keybind = super+shift+,=reload_config
keybind = super+n=new_window
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard
keybind = super+d=new_split:right
keybind = super+plus=increase_font_size:1
keybind = super+minus=decrease_font_size:1
keybind = super+enter=toggle_fullscreen
keybind = super+alt+i=inspector:toggle
keybind = global:super+\=toggle_quick_terminal

## Terminal app keybindings
# nvim save buffer
keybind = super+s=text:\x1b\x3a\x77\x0a
# lazygit
keybind = super+g=text:\x00\x67
# Go to file in vim using fzf
keybind = super+p=text:\x20\x20

## Tmux
# Run `xxd -psg` for key codes
# reload tmux config
keybind = super+r=text:\x00\x72
# tmux thumb mode
keybind = super+shift+f=text:\x00\x43
# tmux url capture using fzf, shortcut mimics kitty's
keybind = ctrl+shift+e=text:\x00\x75
# tmux copy mode
keybind = super+shift+c=text:\x00\x5b
# tmux paste mode
keybind = super+shift+v=text:\x00\x5d
# Switch to last tmux session
keybind = super+l=text:\x00\x4c
# tmux smart session manager
keybind = super+j=text:\x00\x54
keybind = super+k=text:\x00\x54
# tmux rename window
keybind = super+,=text:\x00\x2c
# tmux command mode
keybind = super+;=text:\x00\x3a
# tmux kill window
keybind = super+w=text:\x00\x78
# tmux split window right
keybind = super+e=text:\x00\x25
# tmux spit window below
keybind = super+shift+e=text:\x00\x22
# New tmux window
keybind = super+t=text:\x00\x63
# Tmux next / prev window
keybind = super+[=text:\x00\x70
keybind = super+]=text:\x00\x6e
# tmux zoom
keybind = super+z=text:\x00\x7a
keybind = super+shift+z=text:\x00\x5a
# Move to tmux window #
keybind = super+1=text:\x00\x31
keybind = super+2=text:\x00\x32
keybind = super+3=text:\x00\x33
keybind = super+4=text:\x00\x34
keybind = super+5=text:\x00\x35
keybind = super+6=text:\x00\x36
keybind = super+7=text:\x00\x37
keybind = super+8=text:\x00\x38
keybind = super+9=text:\x00\x39
