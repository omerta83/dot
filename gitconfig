[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[user]
	name = Minh Phung
	email = phung.q.minh@gmail.com

[color]
	ui = auto

[alias]
	st = status -sb
	co = checkout
	sw = switch
	br = branch
	c = commit --short
	ci = commit --short
	p = push
	pf = push --force-with-lease
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
	ll = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
	uncommit = reset --soft HEAD^
	unstage = reset HEAD --
	amend = commit --amend --no-edit
	fixup = commit --fixup

[core]
	pager = delta
	editor = nvim
	autocrlf = input
	# Treat whitespace issues as errors
	whitespace = trailing-space,space-before-tab

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = false
	side-by-side = false
	line-numbers = true
	# true-color = true
	features = decorations

[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none

[merge]
	conflictstyle = zdiff3
	tool = nvimdiff

[diff]
	algorithm = histogram
	colorMoved = default
	tool = nvimdiff
	# Better submodule diffs
	submodule = log

[difftool]
	prompt = false

[mergetool]
	prompt = false
	keepBackup = false

[pull]
	rebase = true

[push]
	default = current
	autoSetupRemote = true
	followTags = true

[fetch]
	prune = true
	pruneTag = true

[rebase]
	autoStash = true
	autoSquash = true
	updateRefs = true

[rerere]
	enabled = true

[init]
	defaultBranch = main

[commit]
	# gpgsign = true
